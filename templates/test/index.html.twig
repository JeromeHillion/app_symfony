{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}
    <div class="dataPopularMovies">
        <div class="container">
            <div class="row">
                <h3>Populaires</h3>
                {% for dataPopularMovie in dataPopularMovies %}

                    <div class="col">
                        <div class="card border-0" style="width: 10rem;">
                            <img src="https://image.tmdb.org/t/p/w220_and_h330_face/{{ dataPopularMovie.poster_path }}"
                                 alt="{{ dataPopularMovie.title }}" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title fw-bold"><a class="link-dark text-decoration-none" href="">{{ dataPopularMovie.title }}</a></h5>
                                <p class="card-text text-secondary">{{ dataPopularMovie.release_date|date("m/d/Y") }}</p>

                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
