<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="navbar">
    <div class="left-sub-navbar">
        <div class="logo-title-navbar">
            <div class="title-navbar">gmdb</div>
            <div class="shape-navbar"></div>
        </div>
        <div class="movies-sub-navbar">
            <div id="movies-select">Films</div>
            <div class="movies-options">
                <a href="/">Populaires</a>
                <a href="/">Du moment</a>
                <a href="/">À venir</a>
                <a href="/">Les mieux notés</a>
            </div>


        </div>
        <div class="tv-show-sub-navbar">
            <div id="tv-show-select">Émissions télévisées</div>
            <div class="tv-show-options">
                <a href="/">Populaires</a>
                <a href="/">Diffusées aujourd'hui</a>
                <a href="/">En cours de diffusion</a>
                <a href="/">Les mieux notés</a>
            </div>

        </div>
        <div class="artists-sub-navbar">
            <div id="artist-select">Artistes</div>
            <div class="artists-options">
                <a href="/">Les plus consultés</a>
            </div>
        </div>
    </div>
    <div class="right-sub-navbar">
        <div class="user-sub-navbar">
            {% if app.session.get("connected") == true %}


            {% else %}
                <div class="user-login-sub-navbar">Connection</div>
                <div class="user-register-sub-navbar" >Inscription</div>

                <div class="search-sub-navbar">Rechercher</div>
            {% endif%}
        </div>
    </div>
</div>
    {% block body %}


    {% endblock %}
</body>
</html>
